@import '/miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss';

/* 视频容器样式 */
.video-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px;
    background-color: #F5F5F5; /* 替换背景色变量 */
}

.local-video, .remote-video {
    width: 45%;
    height: 80%;
    border: 1px solid #007AFF; /* 替换主颜色变量 */
    border-radius: 8px;
    background-color: #000;
}

/* 信息显示区域 */
.info {
    padding: 16px;
    background-color: #FFFFFF; /* 替换背景色变量 */
    border-top: 1px solid #DDD; /* 替换边框颜色变量 */
}

/* 挂断按钮样式 */
.confirm-button {
    display: block;
    padding: 10px 16px;
    font-size: 16px;
    text-align: center;
    color: #fff;
    background-color: #007aff;
    border-radius: 5px;
    width: 80%;
    margin-top: 20px;
}
