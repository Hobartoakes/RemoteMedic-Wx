/* 通话页面样式 */

/* 容器样式 */
.call-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    background-color: var(--background-color);
}

/* 视频区域 */
.video-container {
    flex: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px;
    background-color: var(--background-color);
}

.local-video, .remote-video {
    width: 45%;
    height: 80%;
    border: 2px solid var(--primary-color);
    border-radius: 8px;
    background-color: #000;
}

/* 信息显示区域 */
.info {
    padding: 16px;
    background-color: #ffffff;
    border-top: 1px solid #ddd;
}

.info text {
    font-size: 16px;
    color: var(--text-color);
    margin-bottom: 8px;
}

/* 挂断按钮 */
.end-call-button {
    width: 100%;
    height: 48px;
    background-color: red;
    color: white;
    font-size: 16px;
    text-align: center;
    line-height: 48px;
    border-radius: 8px;
    margin-top: 16px;
}
