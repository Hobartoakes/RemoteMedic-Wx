@import '/miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss';

/* 容器样式 */
.confirm-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 16px;
    background-color: #F5F5F5; /* 替换背景色变量 */
    height: 100%;
}

/* 信息显示 */
.confirm-container text {
    font-size: 18px;
    color: #333333; /* 替换文字颜色变量 */
    margin: 8px 0;
}

/* 确认按钮 */
.confirm-button {
    display: block;
    padding: 10px 16px;
    font-size: 16px;
    text-align: center;
    color: #fff;
    background-color: #007aff;
    border-radius: 5px;
    width: 80%;
    margin-top: 20px;
}
