<van-cell-group>
  <van-field label="预约日期"  model:value="{{ date }}"  />
  <van-field label="手机号码" type="number" model:value="{{ phone }}" />
</van-cell-group>

<van-rate
  value="{{ rate }}"
  size="{{ 25 }}"
  color="#FFFF00"
  void-color="#eee"
  void-icon="star"
  bind:change="onChange"
/>

<van-cell-group>
  <van-field label="评价" type="textarea" autosize model:value="{{ comment }}" placeholder="请输入评价"/>
</van-cell-group>

<van-button style="width:100%;position:fixed;bottom:0;" type="primary" size="large" bind:click="">提交评价</van-button>