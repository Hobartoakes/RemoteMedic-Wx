<view>{{consult_id}}</view>
<view wx:key="index" wx:for="{{ consults }}" style="margin:0 10px 10px 5px;background-color:{{ item.type == 1 ? '#CCFFFF' : '#CCFF99' }}">
  <view wx:if="{{ item.type == 1 }}">
    <text>{{doctor_name}}：</text>
    <text style="float:right;">{{ item.time }}</text>
  </view>
  <view wx:else>
    <text>{{item.time}}</text>
    <text style="float:right;">我：</text>
  </view>
  <rich-text nodes="{{item.content}}">
  </rich-text>
</view>

<van-rate
  value="{{ rate }}"
  size="{{ 25 }}"
  color="#FFFF00"
  void-color="#eee"
  void-icon="star"
  bind:change="onChange"
/>

<van-cell-group>
  <van-field label="评价" type="textarea" autosize model:value="{{ comment }}" placeholder="请输入评价"/>
</van-cell-group>

<van-button style="width:100%;position:fixed;bottom:0;" type="primary" size="large" bind:click="">提交评价</van-button>